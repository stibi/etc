[Unit]
Description=NodeRed service

[Service]
Environment="OPTIONS=--max-old-space-size=128"
ExecStart=/usr/bin/node $OPTIONS red.js -v
WorkingDirectory={{ nodered_ansible_role.nodered_installation_dir }}
User={{ nodered_ansible_role.nodered_user }}
Group=users
Nice=10
SyslogIdentifier=NodeRed
StandardOutput=syslog
Restart=on-failure
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
