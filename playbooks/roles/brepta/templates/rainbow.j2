# You can set all the leds at once.
config led 'all'
        option color '33FF33'
        option status 'auto'

# Any other config will overwrite the one set in all
config led 'pwr'
        option color 'red'
        option status 'auto'

config led 'wifi'
        option color 'blue'
        option status 'auto'

config led 'lan'
        option color 'green'
        option status 'auto'

config led 'wan'
        option color 'FFFF00'
        option status 'auto'

